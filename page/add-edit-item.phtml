//~ Template for add-edit-item.php
// variables:
//  $errors - validation errors
//  $item - submitted Item
//  $edit - true for EDIT, false for ADD

function error_field($title, array $errors) {
    foreach ($errors as $error) {
        /* @var $error Error */
        if ($error->getSource() == $title) {
            return ' error-field';
        }
    }
    return '';
}

/* @var $item Item */
?>

<h1>
